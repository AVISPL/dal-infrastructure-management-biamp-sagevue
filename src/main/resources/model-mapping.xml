<root>
    <model vendor="biamp" node="TesiraDevices" name="generic">
        <properties>
            <property name="firmwareVersion" ref="FirmwareVersion"/>
            <property name="isControlled" ref="IsControlled"/>
            <property name="isProtected" ref="IsProtected"/>
        </properties>
        <mapping>
            <property name="deviceModel" ref="ModelDescription"/>
            <property name="deviceId" ref="SystemId"/>
            <property name="deviceOnline" ref="Status"/>
            <property name="serialNumber" ref="SerialNumber"/>
        </mapping>
    </model>

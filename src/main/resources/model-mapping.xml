            <property name="RebootTesira" ref="RebootTesira"/>
            <property name="firmwareVersion" ref="device.FirmwareVersion"/>
            <property name="isControlled" ref="device.IsControlled"/>
            <property name="isProtected" ref="device.IsProtected"/>
        </properties>
        <mapping>
            <property name="deviceMake" ref="Biamp"/>
            <property name="deviceName" ref="TesiraFORTÃ‰"/>
            <property name="deviceModel" ref="device.ModelDescription"/>
            <property name="deviceId" ref="device.SystemId"/>
            <property name="deviceOnline" ref="device.Status==0"/>
            <property name="serialNumber" ref="device.SerialNumber"/>
        </mapping>
        <control>
            <property name="RebootTesira" value="Push"/>
        </control>
    </model>
